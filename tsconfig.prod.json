{
    "extends": "./tsconfig",
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "declarationMap": true,
        "module": "CommonJS",
        "skipLibCheck": true,
        "target": "ES6"
    },
    "exclude": [
        "dist/**/*",
        "node_modules/**/*",
        ".vscode/**/*",
        "docs/**",
        "jest/**",
        "jest.config.*",
        "tsconfig.*",
        "webpack.config.*",
        "**/stories/**",
        "**/__tests__/**",
        "**/__mocks__/**"
    ]
}
